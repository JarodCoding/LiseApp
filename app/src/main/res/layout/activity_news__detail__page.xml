<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="@color/White"
        android:background="?android:selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


                <de.lisemeitnerschule.liseapp.Utils.FittingImageView
                    android:id="@+id/NewsPicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    />

                <TextView
                    android:id="@+id/NewsTitle"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#50000000"
                    android:textSize="22sp"
                    android:layout_alignLeft="@+id/NewsPicture"
                    android:layout_alignBottom="@+id/NewsPicture"
                    android:padding="16dp"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:text="test"
                    />


            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_below="@id/NewsPicture"
                android:layout_alignParentLeft="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NewsTeaser"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="2.0"
                ext:documentView_maxLines="100"

                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@color/abc_primary_text_material_light"
                ext:documentView_textFormat="formatted"
                ext:documentView_textSize="14sp"
                ext:documentView_textSubPixel="true"
                ext:documentView_wordSpacingMultiplier="5.0"
                ext:documentView_text="teaser"

                ext:documentView_insetPadding="16dp"
                />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_below="@id/NewsTeaser"
                android:layout_alignParentLeft="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NewsText"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="2.0"
                ext:documentView_maxLines="100"
                ext:documentView_text="body"
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@color/abc_primary_text_material_light"
                ext:documentView_textFormat="formatted"
                ext:documentView_textSize="14sp"
                ext:documentView_textSubPixel="true"
                ext:documentView_wordSpacingMultiplier="5.0"

                ext:documentView_insetPadding="16dp"
                />

        </RelativeLayout>



    </android.support.v7.widget.CardView>
</RelativeLayout>